<table class="table">
  <thead>
    <tr>
      <td>Name</td>
      <td>{{shows.name}}</td>
    </tr>

    <tr>
      <td>Rating</td>
      <td>{{shows.rating}}</td>
    </tr>

    <tr>
      <td>Poster</td>
      <td><img src="{{shows.image}}" alt="Poster"></td>
    </tr>

    <tr>
      <td>Summary</td>
      <td>{{shows.summary}}</td>
    </tr>

  </thead>
</table>

<div class="d-flex justify-content-between">
  <a class="btn btn-sm btn-warning" href="/">
    <i class="fas fa-home mr-1"></i>
    Back
  </a>
  {{#if hasSite}}
    <a class="btn btn-sm btn-primary" href="{{ shows.official_site }}" target="_blank">
    <i class="fas fa-paper-plane mr-1"></i>
      Official Site
    </a>
  {{/if}}
</div>